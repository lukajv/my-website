name: Deploy to Server
on:
  push:
    branches: [ main ]
jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Deploy via SSH
        uses: appleboy/ssh-action@master
        with:
          host: ${{ secrets.SERVER_IP }}
          username: [your_admin_user]
          key: ${{ secrets.SERVER_SSH_KEY }}
          script: |
            cd /var/www/egponent.me/html
            git pull origin main
